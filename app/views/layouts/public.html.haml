!!! XML
!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ "http-equiv"=>"Contet-Type", :content=>"text/html; charset=utf-8" }
    %link{ :rel => "shortcut icon", :href => "#{request.relative_url_root}/images/favicon.ico" }
    - @page_title = "Code Ajax Tickets System :: " + ( ( @page_title ) ? @page_title : controller.action_name.capitalize )
    %title= @page_title
    = stylesheet_link_tag "common"
    = stylesheet_link_tag "public"
    = stylesheet_link_tag "popupbox"
    = javascript_tag "var SITE_ROOT = '#{ApplicationHelper::SITE_URL}'; "
    = javascript_include_tag :defaults
    = javascript_include_tag "mover"
    = javascript_include_tag "popupbox"
    :javascript
      document.observe("dom:loaded", function() {
        $$("a[rel*=popupbox]").each(function(a){
          popupbox.forAnchor(a);
        });
      })
  %body
    #public-main
      = render :partial => "public/navigation", :locals => { :navigation => @public }
      #title
        %h1 Welcome to Code Ajax Tickets System!
      .clearer
    - if flash[:notice]
      #notice= flash[:notice]
    - if flash[:error]
      #error= flash[:error]
    #content= yield
    = render :partial => "public/debug_info", :locals => { :debug_info => @public }
